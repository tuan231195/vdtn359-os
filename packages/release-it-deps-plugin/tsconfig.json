{
    "extends": "../../tsconfig",
    "compilerOptions": {
        "lib": ["es2020", "dom"],
        "composite": true,
        "module": "ES6",
        "declaration": true,
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src",
        "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "exclude": ["**/node_modules", "dist"],
    "include": ["src/**/*"]
}
